@model List<ResultBookinDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Misafir</th>
                <th>Giriş Tarihi</th>
                <th>Çıkış Tarihi</th>
                <th>Durum</th>
                <th>Onayla</th>
                <th>İptal Et</th>
                <th>Beklet</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>  
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td>@(((DateTime)item.Checkin).ToString("ddd-MMM-yyyy"))</td>
                    <td>@(((DateTime)item.CheckOut).ToString("ddd-MMM-yyyy"))</td>
                    <td><span class="badge badge-primary px-2"> @item.Status</span></td>
                    <td><a href="#" class="btn btn-outline-primary">Onayla</a></td>
                    <td><a href="#" class="btn btn-outline-primary">iptal Et</a></td>
                    <td><a href="#" class="btn btn-outline-primary">Beklet</a></td>
                    <td><a href="#" class="btn btn-outline-primary">Güncelle</a></td>
                    <td><a href="#" class="btn btn-outline-primary">Detaylar</a>
                </tr>
            }
        </tbody>
    </table>
</div>
