@model List<ResultAppUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-12">
    <div class="card">
        <div class="active-member">
            <div class="table-responsive">
                <table class="table table-xs mb-0">
                    <thead>
                        <tr> 
                            <th>Resim</th>
                            <th>Kullanıcı Adı</th>
                            <th>Lokasyon</th>
                            <th>Ülke</th>
                            <th>Durum</th>
                            <th>Cinsiyet</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                                <td>@item.WorkLocationName</td>
                                <td>
                                    <span>@item.Country</span>
                                </td>
                                <td>
                                    <div>
                                        @if (item.Gender == "Erkek")
                                        {
                                            <div class="progress" style="height: 6px">
                                                <div class="progress-bar bg-success" style="width: 50%"></div>
                                            </div>

                                        }
                                        @if (item.Gender == "Kadın")
                                        {
                                            <div class="progress" style="height: 6px">
                                                <div class="progress-bar bg-warning" style="width: 50%"></div>
                                            </div>

                                        }
                                        <div class="progress" style="height: 6px">
                                            <div class="progress-bar bg-success" style="width: 50%"></div>
                                        </div>
                                    </div>
                                </td>
                                @if (item.Gender == "Erkek")
                                {
                                    <td><i class="fa fa-circle-o text-success  mr-2"></i> Erkek</td>

                                }
                                @if (item.Gender == "Kadın")
                                {
                                    <td><i class="fa fa-circle-o text-warning  mr-2"></i>Kadın</td>

                                }
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<br />
<a href="/Register/Index/" class="btn btn-primary">Yeni Kullanıcı Kaydı</a>
