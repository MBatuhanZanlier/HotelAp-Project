@model List<HotelProject.EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered"> 
    <tr>
    <th>#</th>
    <th>Rol Adı</th>
    <th>Sil</th>
    <th>Güncelle</th> 
    </tr> 
    @foreach (var item in Model)
    {
        <tr> 
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Role/DeleteRole/@item.Id" class="btn m-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/Role/DeleteRole/@item.Id" class="btn m-1 btn-rounded btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Role/AddRole" class="btn btn-outline-info">Yeni Rol Girişi<</a>
